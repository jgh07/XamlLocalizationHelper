<uic:AdonisWindow x:Class="XamlLocalizationHelper.Views.StatusView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:uic="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        Title="Status"
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Background="{DynamicResource {x:Static ui:Brushes.Layer0BackgroundBrush}}"
        Foreground="{DynamicResource {x:Static ui:Brushes.ForegroundBrush}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusText" Grid.Row="0" x:FieldModifier="public" Text="Ready" HorizontalAlignment="Center" Margin="10"/>

        <ProgressBar x:Name="Progress" Grid.Row="1" x:FieldModifier="public" Margin="10" HorizontalAlignment="Stretch"/>
    </Grid>
</uic:AdonisWindow>